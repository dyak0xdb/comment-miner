{
  "manifest_version": 3,
  "name": "Comment Miner",
  "version": "1.0",
  "description": "Collect JS comments on every tab",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "main.html",
    "default_icon": "icon.png"    
  }
}
